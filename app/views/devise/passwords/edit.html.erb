<div class="form-center">
<h2 class="text-center">Changer votre mot de passe</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Nouveau mot de passe", class: "form-label mt-4" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <em class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label mt-4" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions mt-4 text-center">
    <%= f.submit "Changer mon mot de passe", class: "btn btn-primary" %>
  </div>
<% end %>

  <div class="mt-4 d-flex flex-column align-items-center">
    <%= render "devise/shared/links" %>
  </div>
</div>